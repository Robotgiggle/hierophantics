{
	"schemaVersion": 1,
	"id": "hierophantics",
	"version": "${version}",
	"name": "Hierophantics",
	"description": "An addon to Hex Casting that lets you work with extracted minds to create conditional hexes and merge villagers.",
	"authors": [
		"Robotgiggle"
	],
	"contact": {
		"homepage": "https://github.com/robotgiggle/hierophantics",
		"sources": "https://github.com/robotgiggle/hierophantics"
	},
	"license": "MIT",
	"icon": "assets/hierophantics/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"adapter": "kotlin",
				"value": "robotgiggle.hierophantics.HierophanticsMain"
			}
		],
		"modmenu": [
			"robotgiggle.hierophantics.ModMenuIntegration"
		]
	},
	"mixins": [
		"hierophantics.mixins.json"
	],
	"depends": {
		"minecraft": "1.20.1",
		"fabricloader": ">=0.16.7",
		"fabric-api": "*",
		"fabric-language-kotlin": ">=1.10.10+kotlin.1.9.10",
		"hexcasting": ">=0.11.1-7-pre-646"
	}
}